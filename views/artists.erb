  <div class="artists_container">
    <h2>All Artists</h2>
    <div class="cards">
    <% @all_artists.each do |artist| %>
      <div class="artist_card">
        <img src="https://images.unsplash.com/photo-1573152958734-1922c188fba3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1332&q=80" />
        <div class="artist_card-infos">
          <h2><%= artist.name %></h2>
          <p>artist description</p>
          <div class="artist_card-links">
            <a href="#"><i class="fa-solid fa-bell"></i></a>
            <a href="#"><i class="fa-brands fa-spotify"></i></a>
            <a href="#"><i class="fa-solid fa-calendar-days"></i></a>
          </div>
        </div>
        <a class="artist_card-btn" href="/artist/<%=artist.id%>">See more</a>
      </div>
    <% end %>
    </div>
  </div>
